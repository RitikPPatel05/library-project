extends layout

block content

    h1 Delete Genre: #{genre.name}

    if genre_books.length

        p #[strong Delete the following books before attempting to delte this genre.]

        div
            
            h4 Books

            dl
                for book in genre_books
                    dt 
                        a(href=book.url) #{book.title}
                    dd #{book.summary}
    
    else 
        p Do you really want to delete this Genre?

        form(method='POST' action='')
            div
                input(id='id' type='hidden' required='true' name='id' value=genre._id)
            
            div
                button(type='submit' class='btn') Delete