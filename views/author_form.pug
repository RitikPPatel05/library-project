extends layout

block content
    h1 #{title}

    form(method='POST' action='')
        div
            label(for='first_name') First Name:
            input(type='text' id='first_name' name='first_name' required='true' value=(undefined===author? '' :author.first_name))
            
            label(for='family_name') Family Name:
            input(type='text' id='family_name' name='family_name' required='true' value=(undefined===author? '' :author.family_name))

            label(for='date_of_birth') Date of birth:
            input(type='date' id='date_of_birth' name='date_of_birth'  value=(undefined===author ? '' : author.date_of_birth))

            label(for='date_of_birth') Date of death:
            input(type='date' id='date_of_death' name='date_of_death'  value=(undefined===author ? '' : author.date_of_death))

            button(class='btn' type='submit') Submit
    
    if errors
        ul
            for error in errors
                li #{error.msg}
