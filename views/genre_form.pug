extends layout

block content
    h1 #{title}

    form(method='POST' action='')
        div.form-group
            label(for='name') Genre:
            input(id='name' type='text' name='name' value=(undefined===genre ? '' : genre.name))
        button(class='btn' type='submit') Submit
    
    if errors
        ul  
            for error in errors
                li #{error.msg}